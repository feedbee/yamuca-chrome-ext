{
    "manifest_version": 2,

    "name": "__MSG_extName__",
    "description": "__MSG_extDesc__",
    "version": "1.1",
    "author": "__MSG_extAuthor__",
    "homepage_url": "https://github.com/feedbee/yamuca-chrome-ext",

    "permissions": [
        "activeTab",
        "storage",
        "declarativeContent"
    ],

    "background" : {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": ["*://music.yandex.ru/*", "*://music.yandex.by/*", "*://music.yandex.ua/*", "*://music.yandex.tr/*"],
            "js": ["content-script.js"]
        }
    ],

    "web_accessible_resources": [
        "embedded-key-events.js"
    ],

    "page_action": {
        "default_title" : "__MSG_pageActionTitleDefault__",
        "default_icon": {
            "19": "icons/icon-19.png",
            "38": "icons/icon-38.png"
        }
    },

    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-64.png",
        "128": "icons/icon-128.png"
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
  }
}